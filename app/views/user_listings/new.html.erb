<div class="test" id="market">
    <div class="main-div row">
        <div class="col-xs-3">
            <%= render "layouts/sidebar" %>
        </div>

        <div class="col-xs-8">
                <div class="selection-menu menu row">
                    <div class="title">
                        <span>New Trade</span>
                    </div>
                    <div class="col-xs-6 items-offered">
                        <h5>Items Offered</h5>
                        <ul class="clearfix">
                            <li class="highlighted item-slot"></li>
                            <li class="item-slot"></li>
                            <li class="item-slot"></li>
                            <li class="item-slot"></li>
                            <li class="item-slot"></li>
                            <li class="item-slot last-slot"></li>
                        </ul>
                    </div> 
                    <span class="offer-icon glyphicon glyphicon-transfer"></span>   
        
                    <div class="col-xs-6 items-wanted">
                        <h5>Items Wanted</h5>
                        <ul class="clearfix">
                           <li class="item-slot"></li>
                           <li class="item-slot"></li>
                           <li class="item-slot"></li>
                           <li class="item-slot"></li>
                           <li class="item-slot"></li>
                           <li class="item-slot last-slot"></li>
                        </ul>
                    </div>
                </div>

                <div class="search-main">
                    <div class="search-section menu">
                            <div class="title">
                                <span>Search For Item</span>
                            </div>
                              <%= form_tag("/search", class: "item-search", method: "get", remote: true, id: "item-search") do %>
                              <%= label_tag(:search, "Search for:") %>
                              <%= text_field_tag(:search, params[:search]) %>
                              <%= submit_tag("Search", class: "btn btn-primary search-btn") %>
                              <% end %>
                    </div>
    
                    <div class="response-section menu">
                        <div class="title">
                            <span>Searched Items</span>
                        </div>
                        <div class="response">
                            <h2 class="response-message">Type in name of items you would like to search for</h2>
                        </div>
                    </div>
                </div>
    
                <div class="backpack-section menu">
                    <div class="title clearfix">
                        <span>Backpack (<%= @user.user_items.count %> items) </span>
                        <button type="submit" id="reload" class="btn btn-info pull-right">Reload Backpack</button>
                    </div>
                    <div class="backpack clearfix"></div>
                </div>

                <div class="notes-section menu">
                    <div class="title">
                        <span>Notes</span>
                    </div>
                    <div class="notes">
                        <%= text_area_tag(:notes, "", class: "notes-input", placeholder: "Type any notes here to accompany your listing :D") %>
                    </div>
                </div>

                <div class="text-center">
                    <%= form_tag({controller: "user_listings", action: "create"}, method: "post", class: "super-form") do %>
                        <%= hidden_field_tag(:offer) %>
                        <%= hidden_field_tag(:wanted) %>
                        <%= submit_tag("Create Listing", class: "submit-button btn btn-primary") %>
                    <% end %>
                </div>
        </div>   
    </div>

</div>

