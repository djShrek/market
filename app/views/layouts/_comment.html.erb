<% @listings.comments.each do |comment| %>
  <div class="individual-comment row">
      <% if comment.user.avatar_medium.blank? || comment.user.avatar_medium.nil? %>
      <div class="comment-avy col-xs-1">
        <span><img src="http://media.steampowered.com/steamcommunity/public/images/avatars/fe/fef49e7fa7e1997310d705b2a6158ff8dc1cdfeb_medium.jpg"></span>
      </div>
      <% else %>
        <div class="comment-avy col-xs-1">
          <%= link_to url_for(comment.user) do %>
            <span><img src="<%= comment.user.avatar_medium %>"></span>
          <% end %>
        </div>
      <% end %> 
      <div class="comment-header group col-xs-11">
        <div class="title">
            <span><%= comment.user.steam_name%> Posted <%= time_ago_in_words(comment.created_at) %> ago</span>
            <% if current_user == comment.user || @listings.user %>
              <%= link_to url_for([@user, comment]), {:method => :delete} do %>
                <i class="pull-right icon glyphicon glyphicon-trash"></i>
              <% end %>
            <% end %>
        </div>
        <div class="menu comment-description">
          <%= comment.description %>
        </div>
      </div>
  </div>  
<% end %>