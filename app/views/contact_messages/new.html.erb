<div class="container">
    <%= form_tag("/contact_messages", method: "post", role: "form", class: "contact-form") do %>

        <h1>Contact Form</h1>
        <p>Please feel free to contact us if you have any questions, concerns, opinions etc. regarding the application.</p>
        <div class="form-group">
            <%= label_tag(:name, "Name") %>
            <%= text_field_tag(:name, nil, class: "form-control") %>
        </div>

        <div class="form-group">
            <%= label_tag(:name, "E-mail") %>
            <%= text_field_tag(:email, nil, class: "form-control") %>
        </div>

        <div class="form-group">
            <%= label_tag(:name, "Subject") %>
            <%= text_field_tag(:subject, nil, class: "form-control") %>
        </div>

        <div class="form-group">
            <%= label_tag(:name, "Content") %>
            <%= text_area_tag(:content, nil, class: "form-control") %>
        </div>

        <%= submit_tag("Send Message", class: "btn btn-primary") %>

    <% end %>
</div>